<resources>
    <add-resource name="Theme.Micro" type="style"/>
    <style name="Theme.Micro" parent="Theme.Material.NoActionBar.Fullscreen">
        <item name="alertDialogTheme">@style/Theme.Micro.Dialog.Alert</item>
        <item name="alertDialogStyle">@style/AlertDialog.Micro</item>
        <item name="dialogTheme">@style/Theme.Micro.Dialog</item>
        <item name="textViewStyle">@style/Widget.Micro.TextView</item>
        <item name="numberPickerStyle">@style/Widget.Micro.NumberPicker</item>
        <item name="windowAnimationStyle">@style/Animation.Micro.Activity</item>
        <item name="windowContentOverlay">@null</item>
        <item name="windowIsFloating">false</item>
        <!-- We need the windows to be translucent for SwipeToDismiss layout
             to work properly. -->
        <item name="windowIsTranslucent">true</item>
        <item name="windowBackground">?android:attr/colorBackground</item>
        <item name="windowSwipeToDismiss">true</item>
        <!-- Required to force windowInsets dispatch through application UI. -->
        <item name="windowOverscan">true</item>

        <item name="textAppearance">@style/TextAppearance.Micro</item>
        <item name="textAppearanceInverse">@style/TextAppearance.Micro</item>
        <item name="textAppearanceButton">@style/TextAppearance.watch.Button</item>

        <item name="buttonStyle">@style/Widget.watch.Button</item>

        <item name="listPreferredItemPaddingLeft">@dimen/list_item_padding_horizontal_watch</item>
        <item name="listPreferredItemPaddingRight">@dimen/list_item_padding_horizontal_watch</item>
        <item name="listPreferredItemPaddingStart">@dimen/list_item_padding_horizontal_watch</item>
        <item name="listPreferredItemPaddingEnd">@dimen/list_item_padding_horizontal_watch</item>
        <!-- Background dimming -->
        <!-- <item name="backgroundDimEnabled">true</item> -->
        <!-- <item name="backgroundDimAmount">0.5</item> -->

        <!-- Color palette -->
        <item name="colorBackground">@color/background_watch_dark</item>
        <item name="colorAccent">@color/accent_watch</item>
        <item name="textColorPrimary">@color/primary_text_watch</item>

    </style>

    <add-resource name="Theme.Micro.Dialog" type="style"/>
    <style name="Theme.Micro.Dialog" parent="Theme.Material.Dialog">
        <item name="windowTitleStyle">@style/DialogWindowTitle.Micro</item>
        <item name="windowIsFloating">false</item>
        <item name="windowElevation">0dp</item>
        <item name="windowFullscreen">true</item>
        <item name="windowBackground">?android:attr/colorBackground</item>

        <item name="textAppearance">@style/TextAppearance.Micro</item>
        <item name="textAppearanceInverse">@style/TextAppearance.Micro</item>
        <item name="textAppearanceButton">@style/TextAppearance.watch.Button</item>

        <!-- Required to force windowInsets dispatch through application UI. -->
        <item name="windowOverscan">true</item>

        <item name="buttonStyle">@style/Widget.watch.Button</item>
        <item name="buttonBarStyle">@style/Widget.watch.ButtonBar.AlertDialog</item>
        <item name="borderlessButtonStyle">@style/Widget.watch.Button.Borderless</item>
        <item name="buttonBarButtonStyle">?android:attr/borderlessButtonStyle</item>

        <!-- Color palette -->
        <item name="colorBackground">@color/background_watch_dark</item>
        <item name="colorAccent">@color/accent_watch</item>
        <item name="textColorPrimary">@color/primary_text_watch</item>
    </style>

    <add-resource name="Theme.Micro.Dialog.Alert" type="style"/>
    <style name="Theme.Micro.Dialog.Alert" parent="Theme.Micro.Dialog">
        <item name="windowTitleStyle">@style/DialogWindowTitle.Micro</item>
        <item name="alertDialogStyle">@style/AlertDialog.Micro</item>
        <item name="windowContentOverlay">@null</item>
        <item name="windowMinWidthMajor">@dimen/dialog_min_width_major</item>
        <item name="windowMinWidthMinor">@dimen/dialog_min_width_minor</item>
        <item name="windowBackground">?android:attr/colorBackground</item>
    </style>

    <add-resource name="Theme.Micro.Dialog.AppError" type="style"/>
    <style name="Theme.Micro.Dialog.AppError" parent="Theme.Micro.Dialog">
        <item name="windowBackground">@color/background_watch_dark</item>
        <item name="alertDialogStyle">@style/AlertDialog.Micro</item>
        <item name="windowCloseOnTouchOutside">false</item>
        <item name="textSize">20sp</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="textColor">?android:attr/textColorPrimary</item>
    </style>
</resources>
