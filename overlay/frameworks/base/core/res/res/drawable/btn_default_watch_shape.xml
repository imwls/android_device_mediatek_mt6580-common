<!-- Used as the canonical button shape. -->

<inset xmlns:android="http://schemas.android.com/apk/res/android"
       android:insetLeft="@dimen/button_inset_horizontal_material"
       android:insetTop="@dimen/button_inset_vertical_material"
       android:insetRight="@dimen/button_inset_horizontal_material"
       android:insetBottom="@dimen/button_inset_vertical_material">
    <shape android:shape="rectangle">
        <corners android:radius="@dimen/control_corner_watch" />
        <solid android:color="@color/background_watch_dark" />
<!--         <gradient
            android:angle="270"
            android:startColor="#f2444444"
            android:endColor="#e5000000"
            android:type="linear" /> -->
           <!-- note stroke color can't be EXACTLY same as primary text color, or it
                screws up button tinting, so make it close (needs full alpha).
                TODO: if we change text color, should change this too... -->
	   <stroke android:width="1dp" android:color="#ffefefef" />

        <padding android:left="@dimen/button_padding_horizontal_watch"
                 android:top="@dimen/button_padding_vertical_watch"
                 android:right="@dimen/button_padding_horizontal_watch"
                 android:bottom="@dimen/button_padding_vertical_watch" />
    </shape>
</inset>
